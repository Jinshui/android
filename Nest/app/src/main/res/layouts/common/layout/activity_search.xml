<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_left_arrow_pink"
            android:onClick="onBackClick" />

        <EditText
            android:layout_width="0dip"
            android:layout_height="27dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:background="@drawable/bg_grey_big_cornered"
            android:drawableLeft="@drawable/home_header_search_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="@dimen/font_middle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:onClick="onSearchClick"
            android:text="@string/search"
            android:textColor="@color/deeperpink"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

    </LinearLayout>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:fadingEdgeLength="0dip"-->
        <!--android:fillViewport="true"-->
        <!--android:scrollbars="none">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/id_search_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:text="@string/search_history"
                    android:textColor="#625F5F"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:text="热词一"
                    android:textColor="#625F5F"
                    android:textSize="@dimen/font_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/divider_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:text="热词二"
                    android:textColor="#625F5F"
                    android:textSize="@dimen/font_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/divider_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:text="热词三"
                    android:textColor="#625F5F"
                    android:textSize="@dimen/font_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@drawable/divider_horizontal" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:onClick="onCleanClick"
                    android:text="清除"
                    android:textColor="#625F5F"
                    android:textSize="@dimen/font_middle" />
            </LinearLayout>
            <com.creal.nest.views.ptr.LoadingSupportPTRListView
                android:id="@+id/refresh_widget"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    <!--</ScrollView>-->
</LinearLayout>
