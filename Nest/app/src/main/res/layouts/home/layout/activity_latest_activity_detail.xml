<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg_1"
    android:orientation="vertical">

    <com.creal.nest.views.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="0dip"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg_1"
            android:orientation="vertical">

            <com.creal.nest.views.CustomizeImageView
                android:id="@+id/id_coupon_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="180dip"
                android:background="@drawable/test_latest_activity_detail"
                android:contentDescription="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保定百货大楼三楼运动部"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_pink_cornered"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="百货类"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:id="@+id/id_txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/nearby_item_address_sm"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/right_arrow"
                android:padding="10dp"
                android:text="南市区保定百货大楼(裕华西路518号)三楼(运动专营)"
                android:textColor="@color/black" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:id="@+id/id_txt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/icon_latest_activity_phone"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/right_arrow"
                android:padding="10dp"
                android:text="(0312)2066888"
                android:textColor="@color/black" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="@string/latest_activities_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="活动时间: 2015年10月30日-11月30日"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dip"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:text="酷跑潮流-Mia mia精品店暑期夏日狂促周，保定百货大楼运动专区促销，众多的品牌狂欢大促，运动服，运动鞋全场3.4折起，想不到的优惠，就在这里"
                android:textColor="@color/black" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dip" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="left"
                android:onClick="onViewMoreClick"
                android:padding="10dp"
                android:text="@string/latest_activities_view_more"
                android:textColor="@color/deeperpink"
                android:textSize="@dimen/font_small" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>