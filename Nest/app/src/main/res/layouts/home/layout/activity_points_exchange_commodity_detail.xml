<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <com.creal.nest.views.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="0dip"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/my_coupons_detail_image_height">

                <com.creal.nest.views.CustomizeImageView
                    android:id="@+id/id_coupon_thumbnail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:contentDescription=""
                    android:background="@drawable/test_commodity_detail" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@color/translucence"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="10dip">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="台电X98 Plus Win10平板电脑"
                            android:textSize="@dimen/font_middle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:singleLine="true"
                            android:text="9.7英寸Air 视网膜屏 4G运行内存 64G超大存储" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="10000积分"
                    android:textColor="@color/darkpink"
                    android:textSize="@dimen/font_larger" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_pink_cornered"
                    android:onClick="onExchangeClick"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="@string/exchange"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:padding="5dp"
                android:text="@string/commodity_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:padding="5dp"
                android:text="@string/commodity_characteristic"
                android:textColor="@color/black"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:id="@+id/id_txt_commodity_charact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:text="9.7英寸Air 视网膜屏 2048 x 1536 分辨率\nWin10英特尔Z83000处理器+正版Win10操作系统\n4GB + 64Gb: 4G运行内存+64G超大存储 + HDMI + 蓝牙"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:padding="5dp"
                android:text="@string/exchange_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:id="@+id/id_txt_exechange_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:text="限量20个，每个用户仅限兑换一个"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/font_middle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="left"
                android:onClick="onViewMoreClick"
                android:padding="10dp"
                android:text="@string/latest_activities_view_more"
                android:textColor="@color/deeperpink"
                android:textSize="@dimen/font_middle" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>