<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_big_cornered"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_ingots_exchange_confirm"
        android:gravity="center" />

    <TextView
        android:id="@+id/id_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/exchange_recharge_card_hint"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/font_small" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/input_text_height_middle"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_text_view_border"
        android:onClick="onConfirmExchange"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="@string/exchange_confirm"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_grey_cornered"
        android:gravity="center"
        android:onClick="onBackClick"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/back_to_ingots_mall"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/font_small" />
</LinearLayout>
