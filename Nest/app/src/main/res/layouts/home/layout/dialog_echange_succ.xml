<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_big_cornered"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_recharge_select"
        android:gravity="center" />

    <TextView
        android:id="@+id/id_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/exchange_succ"
        android:textColor="@color/black"
        android:textSize="@dimen/font_large" />

    <TextView
        android:id="@+id/id_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/font_small" />

    <Button
        android:id="@+id/id_btn_back_to_mall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_grey_cornered"
        android:gravity="center"
        android:onClick="onBackClick"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/back_to_points_mall"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/font_small" />


    <Button
        android:id="@+id/id_btn_view_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_text_height_middle"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/bg_darkred_big_cornered"
        android:onClick="onViewHistoryClick"
        android:text="@string/exchange_view_history"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
