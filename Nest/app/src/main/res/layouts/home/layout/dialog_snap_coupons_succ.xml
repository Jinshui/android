<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_coupons_detail"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/snapup_coupons_dlg_congratu"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="50dp"
            android:text="获得了10元优惠券"
            android:textColor="@color/black"
            android:textSize="@dimen/font_larger"
            android:textStyle="bold" />


        <Button
            android:layout_width="200dip"
            android:layout_height="65dip"
            android:background="@drawable/bg_yellow_big_cornered"
            android:gravity="center"
            android:onClick="onOkClick"
            android:text="@string/snapup_coupons_dlg_btn"
            android:textColor="@color/red"
            android:textSize="@dimen/font_xxx_larger" />

    </LinearLayout>
</LinearLayout>
