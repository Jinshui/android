<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/bg_list_item_ingot">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_txt_amount"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/id_txt_amount"
            android:text="￥"
            android:textColor="@color/white"
            android:textSize="@dimen/font_middle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/id_txt_coupons"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="55sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_txt_coupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/id_txt_amount_desc"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="@color/white"
            android:textSize="@dimen/font_xx_larger" />

        <TextView
            android:id="@+id/id_txt_amount_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/_text_congratulation"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="(领券成功)"
            android:textColor="#FFA415" />

        <TextView
            android:id="@+id/_text_congratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/_text_desc"
            android:layout_centerHorizontal="true"
            android:text="@string/snapup_coupons_dlg_congratu"
            android:textColor="@color/white"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/id_panel_remaing"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="获得优惠券"
            android:textColor="#FFA415"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/id_panel_remaing"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_yellow_big_cornered"
            android:orientation="vertical"
            android:textSize="@dimen/font_extra_larger">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:text="优惠券已放入您的账户"
                android:textColor="#80221A"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dip"
                android:background="@drawable/bg_darkgray_big_cornered"
                android:paddingBottom="2dp"
                android:paddingLeft="20dp"
                android:onClick="onViewDetailClick"
                android:paddingRight="20dp"
                android:paddingTop="2dp"
                android:text="前往查看"
                android:textColor="#EE0A3B"
                android:textSize="@dimen/font_larger"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
