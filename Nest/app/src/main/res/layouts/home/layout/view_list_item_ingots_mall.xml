<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/id_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:background="@drawable/bg_list_item_ingot"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="充值卡"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_ingot_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_txt_title"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_txt_title"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/id_ingot_thumbnail"
                    android:gravity="right"
                    android:text="￥"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ingot_mall_list_item_icon_height">

            <TextView
                android:id="@+id/id_ingot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="30元充值卡"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/id_ingot_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/id_ingot_info"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="@string/exchange"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_ingot_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/id_ingot_info"
                android:layout_alignBottom="@+id/id_ingot_exchange"
                android:layout_alignLeft="@+id/id_ingot_info"
                android:layout_toLeftOf="@+id/id_ingot_exchange"
                android:drawableLeft="@drawable/ic_ingots_small"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="@string/ingots_num"
                android:textColor="@color/deeperpink"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_ingot_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_info_small"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="兑换50元充值卡，可充值使用"
                android:textColor="@color/grey"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/divider_horizontal" />
</RelativeLayout>

