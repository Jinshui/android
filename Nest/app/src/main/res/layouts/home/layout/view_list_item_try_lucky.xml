<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_snap_coupon_body_bg"
        android:orientation="horizontal"
        android:padding="5dip">

        <com.creal.nest.views.CustomizeImageView
            android:id="@+id/id_coupon_thumbnail"
            android:layout_width="@dimen/lucky_coupons_list_item_icon_width"
            android:layout_height="@dimen/lucky_coupons_list_item_icon_height"
            android:background="@drawable/icon_list_default_bg"
            android:contentDescription="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lucky_coupons_list_item_icon_height"
            android:layout_marginLeft="10dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_txt_lucky_coupons_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/id_txt_lucky_coupons_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:maxLines="2"
                android:padding="0dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/id_btn_try_lucky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dp"
        android:padding="4dip"
        android:background="@drawable/icon_try_lucky_btn_bg"
        android:gravity="center"
        android:text="@string/try_lucky"
        android:textSize="@dimen/font_middle" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
