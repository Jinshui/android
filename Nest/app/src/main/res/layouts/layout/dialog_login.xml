<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="30dp"
        android:paddingBottom="40dp"
        android:background="@color/white_translucence"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_txt_card_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height_middle"
            android:layout_gravity="center_horizontal"
            android:background="@color/input_bg"
            android:drawableLeft="@drawable/icon_login_card_id"
            android:hint="@string/login_card_id"
            android:inputType="number"
            android:paddingLeft="10dip"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/divider_horizontal" />

        <EditText
            android:id="@+id/id_txt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height_middle"
            android:layout_gravity="center_horizontal"
            android:background="@color/input_bg"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:hint="@string/login_password"
            android:inputType="numberPassword"
            android:paddingLeft="10dip"
            android:textSize="16sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="13dip"
            android:background="@drawable/bg_pink_cornered"
            android:onClick="onLoginClick"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="13dip"
            android:background="@drawable/bg_pink_translucence_cornered"
            android:onClick="onCancelClick"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
