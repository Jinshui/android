<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <com.yanis.yc_ui_fragment_tabhost.views.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/my_coupons_detail_image_height">

        <com.yanis.yc_ui_fragment_tabhost.views.CustomizeImageView
            android:id="@+id/id_coupon_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:contentDescription=""
            android:src="@drawable/test_my_coupons_detail" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/icon_coupon_detail_desc"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_coupon_name"
                    android:textSize="@dimen/font_middle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="@string/test_coupon_desc" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:paddingBottom="5dip"
                android:paddingTop="10dip"
                android:text="@string/coupon_usage_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/font_middle" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="@string/coupon_provider"
                android:textColor="@color/black"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:text="@string/test_coupon_provider"
                android:textColor="@color/grey" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="@string/coupon_expired_date"
                android:textColor="@color/black"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:text="@string/test_coupon_expired_date"
                android:textColor="@color/grey" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@drawable/horizontal_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="@string/coupon_rule"
                android:textColor="@color/black"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dip"
                android:text="@string/test_coupon_rule"
                android:textColor="@color/grey"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dip"
                android:paddingTop="3dip"
                android:src="@drawable/icon_coupon_return" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>